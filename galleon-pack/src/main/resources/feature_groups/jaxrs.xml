<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="jaxrs" xmlns="urn:jboss:galleon:feature-group:1.0">
    <feature spec="subsystem.jaxrs">
        <param name="jaxrs-2-0-request-matching" value="false"/>
        <param name="resteasy-add-charset" value="true"/>
        <param name="resteasy-buffer-exception-entity" value="true"/>
        <param name="resteasy-disable-html-sanitizer" value="false"/>
        <param name="resteasy-document-expand-entity-references" value="false"/>
        <param name="resteasy-document-secure-disableDTDs" value="true"/>
        <param name="resteasy-document-secure-processing-feature" value="true"/>
        <param name="resteasy-gzip-max-input" value="10000000"/>
        <param name="resteasy-rfc7232preconditions" value="false"/>
        <param name="resteasy-role-based-security" value="false"/>
        <param name="resteasy-secure-random-max-use" value="100"/>
        <param name="resteasy-use-builtin-providers" value="true"/>
        <param name="resteasy-use-container-form-params" value="false"/>             
        <param name="resteasy-wider-request-matching" value="false"/>
    </feature>
</feature-group-spec>

